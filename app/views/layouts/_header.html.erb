<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= image_tag("evive.png", alt: "EVIVE", class: "logo") %>
      <%= link_to "Mini Twitter", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to raw('<span class="icon"><i class="icon-user"></i></span> Profile'), current_user %></li>
                <li><%= link_to raw('<span class="icon"><i class="icon-cogs"></i></span> Settings'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to raw('<span class="icon"><i class="icon-signout"></i></span> Sign out'), signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to raw('<span class="icon"><i class="icon-signin"></i></span> Sign in'), signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>